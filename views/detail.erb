<h2>
	<%= @result["Title"] %> 
  (<%= @result["Year"] %>)
</h2>
  <img src="<%= @result["Poster"] %>" alt="Movie Poster for <%= @result["Title"] %>" class="poster" alt="Movie Poster"/>
<blockquote>
  <%= @result["Plot"] %>
</blockquote>
<dl>
  <dt>
    Rating
  </dt>
  <dd>
    <%= @result["Rated"] %>
  </dd>
    <dt>
    IMDb Rating
  </dt>
  <dd>
    <%= @result["imdbRating"] %>
  </dd>
  <dt>
    Genre
  </dt>
  <dd>
    <%= @result["Genre"] %>
  </dd>
  <dt>
    Runtime
  </dt>
  <dd>
    <%= @result["Released"] %>
  </dd>
  <dt>
    Released
  </dt>
  <dd>
    <%= @result["Released"] %>
  </dd>
  <dt>
    <%= "Director" if @directors.size == 1 %>
    <%= "Directors" if @directors.size > 1 %>
  </dt>
  <dd>
    <% @directors.each do |director| %>
      <li><%= director %></li>
    <% end %>
  </dd>
  <dt>
    <%= "Actor" if @actors.size == 1 %>
    <%= "Actors" if @actors.size > 1 %>
  </dt>
  <dd>
    <% @actors.each do |actor| %>
      <li><%= actor %></li>
    <% end %>
  </dd>
</dl>